{
  "_comment": "StratusScan Optional Permissions - AWS Commercial",
  "_description": "Optional permissions for advanced StratusScan features in AWS Commercial (aws partition). This policy adds support for ML/AI services (SageMaker, Bedrock, Comprehend, Rekognition), global edge services (CloudFront, Global Accelerator), and mobile/marketing services (Pinpoint). These permissions are additive to the required permissions and can be combined. Compatible with both IAM and IAM Identity Center.",
  "_partition": "aws",
  "_regions": "All AWS Commercial regions (CloudFront and Global Accelerator are global services)",
  "_compliance": "Production-ready IAM policy for read-only security auditing - advanced features",
  "_usage": "Attach to IAM users, roles, or Identity Center permission sets alongside commercial-required-permissions.json for full StratusScan functionality",
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "StratusScanOptionalMLAIPermissions",
      "Effect": "Allow",
      "Action": [
        "sagemaker:Describe*",
        "sagemaker:List*",
        "sagemaker:Get*",
        "bedrock:Get*",
        "bedrock:List*",
        "bedrock:GetAgent",
        "bedrock:GetAgentAlias",
        "bedrock:GetAgentKnowledgeBase",
        "bedrock:GetAgentVersion",
        "bedrock:GetDataSource",
        "bedrock:GetKnowledgeBase",
        "bedrock:ListAgentActionGroups",
        "bedrock:ListAgentAliases",
        "bedrock:ListAgentKnowledgeBases",
        "bedrock:ListAgents",
        "bedrock:ListAgentVersions",
        "bedrock:ListDataSources",
        "bedrock:ListKnowledgeBases",
        "bedrock:ListTagsForResource",
        "comprehend:Describe*",
        "comprehend:List*",
        "rekognition:Describe*",
        "rekognition:List*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "StratusScanOptionalGlobalEdgePermissions",
      "Effect": "Allow",
      "Action": [
        "cloudfront:Get*",
        "cloudfront:List*",
        "globalaccelerator:Describe*",
        "globalaccelerator:List*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "StratusScanOptionalMobileMarketingPermissions",
      "Effect": "Allow",
      "Action": [
        "mobiletargeting:GetApp",
        "mobiletargeting:GetApplicationSettings",
        "mobiletargeting:GetCampaign",
        "mobiletargeting:GetEmailChannel",
        "mobiletargeting:GetSegment",
        "mobiletargeting:GetSmsChannel",
        "mobiletargeting:ListTagsForResource"
      ],
      "Resource": "*"
    },
    {
      "Sid": "StratusScanOptionalMarketplacePermissions",
      "Effect": "Allow",
      "Action": [
        "aws-marketplace:DescribeEntity",
        "aws-marketplace:ListEntities",
        "aws-marketplace:ListChangeSets",
        "aws-marketplace:ViewSubscriptions"
      ],
      "Resource": "*"
    }
  ]
}
